<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="?attr/selectableItemBackground">

    <ViewStub
        android:id="@+id/stub__summary_row_layout"
        android:layout="@layout/list_item__entry_summary_row"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item__height_three_lines"/>

    <ViewStub
        android:id="@+id/stub__date_border_layout"
        android:layout="@layout/list_item__entry_date_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/ll__list_item__content_layout"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/list_item__height_three_lines"
                  android:paddingLeft="@dimen/material_default_margin"
                  android:paddingRight="@dimen/material_default_margin">

        <org.theronin.expensetracker.view.AmountDisplayLayout
            android:id="@+id/amount_display_current"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/tv__list_item__entry__category"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/material_default_margin"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:textSize="16sp"/>

        <org.theronin.expensetracker.view.AmountDisplayLayout
            android:id="@+id/amount_display_home"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical|right"
            android:visibility="invisible"/>
    </LinearLayout>


</LinearLayout>