<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/padding_single"
        android:paddingLeft="@dimen/padding_single"
        android:paddingRight="@dimen/padding_single"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv__add_entry_title"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/tv__add_entry_title"
            style="@style/TitleStyle"/>

        <Button
            android:id="@+id/btn__add_entry_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/btn__add_entry_confirm"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv__currency_symbol"
            android:layout_width="@dimen/left_margin"
            android:layout_height="match_parent"
            style="@style/CurrencyStyle"/>

        <EditText
            android:id="@+id/et__entry_amount"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:inputType="numberDecimal"
            android:layout_height="match_parent"/>

        <Spinner
            android:id="@+id/spn__entry_category"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            />

        <EditText
            android:id="@+id/et__entry_date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:inputType="date"/>


    </LinearLayout>

</LinearLayout>