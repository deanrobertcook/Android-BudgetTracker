<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll__summary_row"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primary_light"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/material_default_margin"
              android:paddingRight="@dimen/material_default_margin">

    <TextView
        android:id="@+id/tv__summary_row_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:textSize="16sp"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <org.theronin.expensetracker.view.AmountView
                android:id="@+id/adl__summary_row_amount"
                android:layout_width="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_height="26dp"/>

            <TextView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="24dp"
                android:text="/"/>

            <org.theronin.expensetracker.view.AmountView
                android:id="@+id/adl__summary_monthly_limit"
                android:layout_width="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_height="26dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>