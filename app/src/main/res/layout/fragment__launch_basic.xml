<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/material_default_margin">

    <TextView
        android:id="@+id/fragment_launch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_welcome_title"
        android:textColor="@color/primary_dark"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/fragment_launch_body"
        android:paddingTop="@dimen/material_default_margin"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/launch_welcome_message"/>

</LinearLayout>