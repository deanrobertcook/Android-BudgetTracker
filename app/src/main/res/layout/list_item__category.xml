<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/padding_single">

    <TextView
        android:id="@+id/tv__name_column"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        style="@style/ListItemStyle"/>

    <LinearLayout
        android:id="@+id/ll__currency_total"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingRight="@dimen/padding_single"
        android:paddingLeft="@dimen/padding_single">

        <include layout="@layout/currency_display_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv__total_column"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="right"
        style="@style/ListItemStyle"/>

    <LinearLayout
        android:id="@+id/ll__currency_monthly"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingRight="@dimen/padding_single"
        android:paddingLeft="@dimen/padding_single">

        <include layout="@layout/currency_display_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv__monthly_column"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="right"
        style="@style/ListItemStyle"/>

</LinearLayout>