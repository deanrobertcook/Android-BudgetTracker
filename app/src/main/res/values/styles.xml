<resources>
    
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="QuickBarStyle">
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">@dimen/quick_bar_elevation</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CurrencyStyle">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:padding">@dimen/padding_single</item>
    </style>

    <style name="MainMenuTextStyle">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="OptionsDialogStyle" parent="android:Theme.Material.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
