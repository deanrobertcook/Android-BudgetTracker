<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CurrencyStyle">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:padding">@dimen/padding_single</item>
        <item name="android:gravity">center_horizontal|right</item>
    </style>

    <style name="MainMenuTextStyle">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="OptionsDialogStyle">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
